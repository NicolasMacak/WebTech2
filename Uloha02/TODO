body jednotlivca
suhlasSBodmi (true/false)
)

--- SQL

create table predmety(
id int AUTO_INCREMENT PRIMARY KEY,
skratka varchar(255) not null,
nazov varchar(255) not null
)

create table timy(
--- rok
id int (10) primary key not null,
nazovPredmetu varchar(255) not null,
rok int(4) not null,
body float(4),
schvaleneKapitanom boolean,
schvaleneAdminom boolean
)

-- update
create table timy(
rok int(4) not null,
cisloTimu int (10) not null,
PRIMARY KEY(rok, cisloTimu),
nazovPredmetu varchar(255) not null,
body float(4),
schvaleneKapitanom boolean,
schvaleneAdminom boolean
)



ver 2
create table timy(
cisloTimu int (2) not null,
skratkaPredmetu varchar(255) not null,
PRIMARY KEY (skratkaPredmetu, cisloTimu),
body float(4),
schvaleneKapitanom boolean,
schvaleneAdminom boolean
)

create table clenoviaTimov(
--- id rocnik
idTimu int(10) not null,
idStudenta int(5) not null,
primary key(idTimu, idStudenta),
body float(4),
suhlasSbodmi boolean
)

ver 2
create table clenoviaTimov(
rocnik int(4) not null,
idPredmetu int not null,
cisloTimu int(2) not null,
idStudenta int(5) not null,
primary key(rocnik,idPredmetu,cisloTimu, idStudenta),
body float(4),
suhlasSbodmi boolean
)




